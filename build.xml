<project name="ST4" default="distribute" basedir=".">

    <property file="build.properties" />

    <property name="dist.dir" value="${basedir}/dist" />
    <property name="build.dir" value="${basedir}/build" />
    <property name="lib.dir" value="${basedir}/lib" />
    <property name="src.dist.dir" value="${dist.dir}/src" />

    <property name="jar.file" value="${dist.dir}/ST-${version}.jar" />

	<path id="classpath">
		<pathelement location="${antlr3.jar}"/>
		<pathelement location="${ant-antlr3.jar}"/>
	</path>

	<target name="init">
		<!-- Create the build directory structure used by compile -->
		<mkdir dir="${build.dir}/gen/org/stringtemplate/v4/compiler" />
	</target>

	<target name="antlr" depends="init">
		<antlr:ant-antlr3 xmlns:antlr="antlib:org/apache/tools/ant/antlr"
			target="${source}/org/stringtemplate/v4/compiler/Group.g"
			outputdirectory="${build.dir}/gen/org/stringtemplate/v4/compiler">
			<classpath refid="classpath"/>
		</antlr:ant-antlr3>
		<antlr:ant-antlr3 xmlns:antlr="antlib:org/apache/tools/ant/antlr"
			target="${source}/org/stringtemplate/v4/compiler/STParser.g"
			outputdirectory="${build.dir}/gen/org/stringtemplate/v4/compiler">
			<classpath refid="classpath"/>
		</antlr:ant-antlr3>
	</target>

    <target name="clean">
        <delete dir="${build.dir}"/>
        <delete dir="${dist.dir}"/>
    </target>

    <target name="compile" depends="antlr" description="Compile for generic OS">
        <mkdir dir="${build.dir}/classes"/>
        <javac
                destdir="${build.dir}/classes"
                source="1.5"
                target="1.5"
                debug="true"
                excludes="org/stringtemplate/v4/test/**">
			<classpath refid="classpath"/>
            <src path="${source}:${build.dir}/gen"/>
        </javac>
    </target>

    <target name="build" depends="compile" description="Build ST4.jar">
        <mkdir dir="${dist.dir}"/>

        <jar jarfile="${jar.file}">
            <fileset dir="${build.dir}/classes" includes="**/*.class"/>

            <manifest>
                <attribute name="Version" value="${version}"/>
            </manifest>
        </jar>
    </target>

    <target name="zip-source">
        <mkdir dir="${src.dist.dir}"/>

        <copy todir="${src.dist.dir}">
            <fileset dir=".">
                <include name="build.properties"/>
                <include name="build.xml"/>
            </fileset>
        </copy>

        <copy todir="${src.dist.dir}/src">
            <fileset dir="${source}"/>
        </copy>

        <zip destfile="${dist.dir}/ST4-${version}-src.zip"
             basedir="${src.dist.dir}"
                >
        </zip>
    </target>

    <target name="distribute" depends="clean, zip-source, build">
    </target>

</project>
